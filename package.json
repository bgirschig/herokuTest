{
  "name": "heroku_cordova_offline",
  "version": "1.0.0",
  "description": "",
  "main": "server/server.js",
  "engines": {
    "node": "6.11.1"
  },
  "scripts": {
    "start": "node server/server.js",
    "gulpBuild" : "gulp",
    
    "cordovaBuild" : "(cd cordovaWrap/ && ../node_modules/cordova/bin/cordova build android)",
    "cordovaRun" : "(cd cordovaWrap/ && ../node_modules/cordova/bin/cordova run android)",
    "completeBuild": "npm test && npm run gulpBuild && npm run cordovaBuild",
    "buildAndRun": "npm test && npm run gulpBuild && npm run cordovaRun",
    
    "test": "mocha tests/*/*.js",
    "clientTest": "mocha tests/client/*.js",
    "serverTest": "mocha tests/server/*.js",

    "deployServer": "serverTest && git push heroku master"
  },
  "author": "Bastien Girschig <bastien.girschig@gmail.com> (http://www.bastiengirschig.fr)",
  "license": "MIT",
  "dependencies": {
    "express": "^4.15.3"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "cordova": "^7.0.1",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.8",
    "mocha": "^3.4.2",
    "uniq": "^1.0.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
